{
  "extends": ["../../tsconfig.base.json", "@vue/tsconfig/tsconfig.dom.json"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@base/*": ["../../packages/base/src/*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@theme/*": ["../../packages/theme/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [
    { "path": "../../packages/base/tsconfig.app.json" },
    { "path": "../../packages/ui/tsconfig.app.json" }
  ]
}
